<body>
    <div class="container-fluid" style="padding: 50px;">
        <h1><p align="center"><a href="/"><font color="black">Read 'n' Go</font></a></p></h1>
    </div>
    <div class="container-fluid">
        <form method="POST" action="/search">
                <input required type="text" name="ss" placeholder="Что будем искать?" class="form-control form-control-lg">
                <br>
                <p align="center">
                    <button type="submit" class="btn btn-secondary form-control-lg">Найти</button>
                </p>
        </form>
    </div>

    <% if @author.nil? && @books.nil? %>
        <div class="container-fluid">
            <h2>Самые популярные книги:</h2>
            <ol>
                <% @popular_books.each do |book| %>
                    <li><a href="/?author=<%= book.author_id %>"><%= "#{book.author.search_name.split(' ').map{ |b| b.capitalize }.join(' ')}" %></a> - <%= "#{book.title.split(' ').map{ |b| b.capitalize }.join(' ')}" %> - <a href="/download?book=<%= book.id %>">Скачать</a></li>
                <% end %>
            </ol>
        </div>
    <% end %>

    <% if @authors %>
        <div class="container-fluid">
            <h2>Авторы:</h2>
            <ul>
                <% @authors.each do |author| %>
                    <li><a href="/?author=<%= author.id %>"><%= "#{author.search_name.split(' ').map{ |b| b.capitalize }.join(' ')}" %></a></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <% if @books %>
        <div class="container-fluid">
            <h2>Книги:</h2>
            <ul>
                <% @books.each do |book| %>
                    <li><a href="/?author=<%= book.author_id %>"><%= "#{book.author_name.split(' ').map{ |b| b.capitalize }.join(' ')}" %></a> - <%= "#{book.book_title.split(' ').map{ |b| b.capitalize }.join(' ')}" %> - <a href="/download?book=<%= book.book_id %>">Скачать</a></li>
                <% end %>
            </ul>
        </div>
    <% end %>

